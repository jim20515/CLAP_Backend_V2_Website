@model Demo.Areas.Example.Models.Employee

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@section scripts {
	@Scripts.Render("~/bundles/jqueryval")
    <script>
	$("input[type=file]").fileinput({
	    initialPreview: [
            "<img src='/Uploads/Resize/@Model.LogoPath' class='file-preview-image' alt='' title=''>",
	    ],
	    overwriteInitial: false,
	    maxFileSize: 100,
	    allowedFileExtensions: ["jpg"]
	});
    </script>
}

